<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    tools:context=".conversation.view.ConversationViewActivity"
    android:background="#918c8c">

    <ImageView
        android:id="@+id/conversation_bcg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/record_vsg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/faces_cantainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <TextView
            android:id="@+id/tv_no_chat_bcg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/chatter_not_has_bcg"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_theme"/>

        <Button
            android:id="@+id/rec_left_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"

            android:background="@mipmap/close"/>

        <Button
            android:id="@+id/middle_btn"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/movie"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight= "16dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000">

            <cn.bahamut.common.progressbar.CircleProgressBar
                android:id="@+id/recorded_pregress"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:indeterminate="false"
                app:backgroundColor="#11111111"
                app:fillColor="#ff0000"
                app:progressWidth="10dp"
                app:progress="30"
                app:smallCircleColor="#666666"
                app:textColor="#00000000"/>

            <View
                android:id="@+id/recording_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/recording_view"
                android:visibility="invisible"/>
        </RelativeLayout>

    </RelativeLayout>

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="54dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:id="@+id/progress_sending"
        android:max="100"
        android:progress="20"
        android:layout_marginTop="-6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/play_vsg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/vsg_content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="-30dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_centerInParent="true">

        </RelativeLayout>

        <View
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:background="#1affffff"/>

        <Button
            android:id="@+id/new_vessage_btn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/chat"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btn_image_chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/image_chat_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:elevation="0dp" />

        <Button
            android:id="@+id/play_left_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/send_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <RelativeLayout
            android:id="@+id/vessage_types_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/badge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="10pt"
            android:minHeight="10pt"
            android:layout_alignTop="@id/vsg_content_container"
            android:layout_alignRight="@id/vsg_content_container"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="-5dp"
            android:translationY="-30dp"
            android:textColor="@android:color/white"
            android:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="5pt"
            android:background="@drawable/badge"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_chat_input_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
