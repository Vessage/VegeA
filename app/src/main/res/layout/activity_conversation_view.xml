<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    tools:context=".conversation.ConversationViewActivity"
    android:background="#918c8c">

    <ImageView
        android:id="@+id/conversation_bcg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/play_vsg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="invisible">
        <TextView
            android:id="@+id/no_msg_tips_text_view"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/noMessageTips"/>


        <RelativeLayout
            android:id="@+id/video_player_container"
            android:layout_width="240dp"
            android:layout_height="320dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </VideoView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/video_view_center_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/play_gray"
                android:background="#00000000"/>

            <ProgressBar
                android:id="@+id/video_progress"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/video_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:textSize="4pt"
                android:textColor="@android:color/white"
                android:text="2016-05-14 11:11"/>

        </RelativeLayout>

        <Button
            android:id="@+id/record_btn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/chat"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/next_msg_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/play_next"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <TextView
            android:id="@+id/badge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="10pt"
            android:minHeight="10pt"
            android:layout_alignTop="@id/video_player_container"
            android:layout_alignRight="@id/video_player_container"
            android:layout_marginTop="-10dp"
            android:layout_toLeftOf="@id/video_player_container"
            android:layout_marginRight="-10dp"
            android:textColor="@android:color/white"
            android:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="5pt"
            android:background="@drawable/badge"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/record_vsg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/faces_cantainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <TextView
            android:id="@+id/tv_no_chat_bcg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/chatter_not_has_bcg"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_theme"/>

        <Button
            android:id="@+id/left_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"

            android:background="@mipmap/close"/>

        <Button
            android:id="@+id/middle_btn"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@mipmap/movie"/>

        <TextView
            android:id="@+id/recording_time_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="26dp"
            android:textSize="12pt"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#FF0000"
            android:text="12"/>
    </RelativeLayout>

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="54dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <ProgressBar
        android:id="@+id/progress_sending"
        android:max="100"
        android:progress="20"
        android:layout_marginTop="-6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

</RelativeLayout>
