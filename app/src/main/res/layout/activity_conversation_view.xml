<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    tools:context=".conversation.chat.ConversationViewActivity"
    android:background="#918c8c">

    <ImageView
        android:id="@+id/conversation_bcg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/record_vsg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/faces_cantainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <TextView
            android:id="@+id/tv_no_chat_bcg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/chatter_not_has_bcg"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_theme"/>

        <Button
            android:id="@+id/rec_left_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"

            android:background="@mipmap/close"/>

        <Button
            android:id="@+id/middle_btn"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/movie"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight= "16dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000">

            <cn.bahamut.common.progressbar.CircleProgressBar
                android:id="@+id/recorded_pregress"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:indeterminate="false"
                app:backgroundColor="#11111111"
                app:fillColor="#ff0000"
                app:progressWidth="10dp"
                app:progress="30"
                app:smallCircleColor="#666666"
                app:textColor="#00000000"/>

            <View
                android:id="@+id/recording_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/recording_view"
                android:visibility="invisible"/>
        </RelativeLayout>

    </RelativeLayout>

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="54dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:id="@+id/progress_sending"
        android:max="100"
        android:progress="20"
        android:layout_marginTop="-6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progress_reading"
        android:max="100"
        android:progress="20"
        android:layout_marginTop="-6dp"
        android:progressTint="#77bbFF"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/play_vsg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="#1affffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="left">
            <Button
                android:id="@+id/btn_chat_img_mgr"
                android:scaleType="centerCrop"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_chat_image_mgr"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right">
            <Button
                android:id="@+id/new_chat_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/new_chat_btn"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/new_image_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/new_image_btn"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/new_text_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/new_text_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:elevation="0dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vsg_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_view"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_centerInParent="true">
            <cn.bahamut.vessage.conversation.chat.views.ChattersBoard
                android:id="@+id/top_chatters_board"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="96dp"
                android:layout_alignParentTop="true"/>
            <cn.bahamut.vessage.conversation.chat.views.ChattersBoard
                android:id="@+id/bottom_chatters_board"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vessage_types_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#aa888888"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_chat_input_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
