<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".conversation.ConversationViewActivity"
    android:background="#918c8c">


    <TextView
        android:id="@+id/noMsgTipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/noMessageTips"/>


    <RelativeLayout
        android:id="@+id/videoPlayerContainer"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </VideoView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/videoViewCenterButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/play_gray"
            android:background="#00000000"/>

        <ProgressBar
            android:id="@+id/videoViewProgressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/videoDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:textSize="4pt"
            android:textColor="@android:color/white"
            android:text="2016-05-14 11:11"/>

    </RelativeLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/chatterButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:riv_corner_radius="28dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/default_avatar"
        android:background="#00000000"/>

    <Button
        android:id="@+id/recordVideoButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/chat"/>

    <Button
        android:id="@+id/nextMsgButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/play_next"/>

    <TextView
        android:id="@+id/badgeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="14pt"
        android:minHeight="14pt"
        android:layout_alignTop="@id/videoPlayerContainer"
        android:layout_alignRight="@id/videoPlayerContainer"
        android:layout_marginTop="-10dp"
        android:layout_toLeftOf="@id/videoPlayerContainer"
        android:layout_marginRight="-10dp"
        android:textColor="@android:color/white"
        android:text="1"
        android:textAlignment="center"
        android:textSize="6pt"
        android:background="@drawable/badge"/>
</RelativeLayout>
