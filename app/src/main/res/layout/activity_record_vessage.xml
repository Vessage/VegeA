<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:fitsSystemWindows="true"
    tools:context=".conversation.RecordVessageActivity">

    <ImageView
        android:id="@+id/chatterImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:background="#000000" />

    <ImageView
        android:id="@+id/smileFaceImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:src="@mipmap/default_face"/>

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/refresh_round"
        android:background="#00000000"/>

    <ImageButton
        android:id="@+id/middleButton"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/movie"
        android:background="#00000000"/>

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/close"
        android:background="#00000000"/>

    <com.seu.magicfilter.widget.MagicCameraView
        android:id="@+id/previewView"
        android:layout_width="56dp"
        android:layout_height="80dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_alignLeft="@id/rightButton"
        android:layout_alignStart="@id/rightButton"
        android:layout_alignBottom="@id/rightButton" />

    <TextView
        android:id="@+id/recordingTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#FF0000"/>



</RelativeLayout>
