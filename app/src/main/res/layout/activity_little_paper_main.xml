<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.littlepaper.LittlePaperMainActivity">
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/centerView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/new_little_paper"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="@string/new_little_paper"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/centerView"
        android:background="@drawable/little_paper_button"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/new_little_paper"
        android:text="@string/little_paper"
        android:layout_marginBottom="30dp"
        android:textSize="10pt"/>

    <Button
        android:id="@+id/little_paper_box"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="@string/little_paper_box"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/centerView"
        android:background="@drawable/little_paper_button"
        android:textColor="@android:color/white"/>
</RelativeLayout>
