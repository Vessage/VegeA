<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon_img_view"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:riv_corner_radius="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/headline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_img_view"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:textSize="10pt"
            android:text="Headline"/>

        <ImageView
            android:id="@+id/next_mark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />

        <TextView
            android:id="@+id/badge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="8pt"
            android:minHeight="8pt"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/next_mark"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="1"
            android:textAlignment="center"
            android:textSize="4pt"
            android:background="@drawable/badge"/>

        <View
            android:id="@+id/badge_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-3dp"
            android:layout_alignRight="@id/icon_img_view"
            android:layout_alignTop="@id/icon_img_view"
            android:background="@drawable/red_dot" />
    </RelativeLayout>
</LinearLayout>
