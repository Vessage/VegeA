<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#aaFFFAFA">

    <RelativeLayout
        android:id="@+id/send_text_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="#eeFFFAFA">
        <Button
            android:id="@+id/btn_chat_img_mgr"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@mipmap/default_face_head" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            style="@style/Base.Widget.AppCompat.Button.Small"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:text="@string/send"/>

        <EditText
            android:id="@+id/et_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@id/btn_chat_img_mgr"
            android:layout_toLeftOf="@id/btn_send"
            android:gravity="start|center"
            android:textSize="8pt"
            android:inputType="text"
            android:textAlignment="textStart"
            android:imeOptions="actionSend"
            android:hint="@string/msg_hint"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_sending"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="20"
        android:layout_above="@id/send_text_container"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_images_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/send_text_container"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="invisible"
        android:background="@mipmap/chat_bubble">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>