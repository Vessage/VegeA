<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <cn.bahamut.vessage.conversation.chat.views.BezierBubbleView
            android:id="@+id/bubble_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/vessage_record_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@id/container"
        android:layout_alignRight="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignBottom="@id/container"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_record"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container"
        android:layout_above="@id/vessage_record_list"
        android:gravity="center"
        android:textSize="6pt"
        android:layout_marginBottom="-24dp"/>

</RelativeLayout>
