<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatarImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/default_avatar"/>

        <TextView
            android:id="@+id/headlineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatarImageView"
            android:layout_alignTop="@id/avatarImageView"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:textSize="10pt"
            android:text="Headline"/>

        <TextView
            android:id="@+id/sublineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatarImageView"
            android:layout_alignBottom="@id/avatarImageView"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="6pt"
            android:text="Subline"/>

        <TextView
            android:id="@+id/badgeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="13pt"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="1"
            android:textAlignment="center"
            android:textSize="6pt"
            android:background="@drawable/badge"/>

    </RelativeLayout>
</LinearLayout>
